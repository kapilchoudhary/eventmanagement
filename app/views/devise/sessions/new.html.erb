<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 mx-auto">
      <div class="card my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Login</h5>
          <%= content_tag(:div, flash[:error], :id => "flash_error", class: "text-danger text-center") if flash[:error] %>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-label-group">
              <label>Email</label>
              <%= f.text_field :email, autocomplete: "email", class: "form-control", placeholder: "Enter Email", required: true %>
            </div>

            <div class="form-label-group">
              <label>Password</label>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter Password", required: true %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-label-group">
                <%= f.check_box :remember_me %>
                <label>Remember me</label>
              </div>
            <% end %>
            <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
          <%end%>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>