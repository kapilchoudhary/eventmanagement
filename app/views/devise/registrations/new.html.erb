<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 mx-auto">
      <div class="card my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Sign up</h5>
          <%= content_tag(:div, flash[:error], :id => "flash_error", class: "text-danger text-center") if flash[:error] %>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-label-group">
              <label>Email</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-label-group">
              <label>Name</label>
              <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
            </div>

            <div class="form-label-group">
              <label>Gender</label>
              <%= f.select(:gender, ['Male', "Female"], {}, { :class => 'form-control' }) %>
            </div>

            <div class="form-label-group">
              <label>Password</label>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-label-group">
              <label>Password Confirmation</label>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block text-uppercase mt-2" %>
          <%end%>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
